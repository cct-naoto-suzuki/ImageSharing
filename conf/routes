# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                controllers.HomeController.index()

# ログイン処理
POST    /auth/login                      controllers.AuthController.login()

# DB へのアクセステスト
GET     /test/db/get/notdsl              controllers.TestController.testDbGetWithoutDsl()
GET     /test/db/get/params              controllers.TestController.testDbGetWithoutDslWithParams()
GET     /test/db/get                     controllers.TestController.testDbGet()
POST    /test/db/insert                  controllers.TestController.testDbInsert()
POST    /test/db/delete                  controllers.TestController.testDbDelete()
POST    /test/db/update                  controllers.TestController.testDbUpdate()

# Action のテスト
GET     /test/secureaction               controllers.TestController.testSecureAction()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)
